{
  "name": "vue-detour",
  "version": "0.0.1",

  "files": ["dist"],
  "main": "./dist/vue-detour.umd.js",
  "module": "./dist/vue-detour.es.js",
  "exports": {
    ".": {
      "import": "./dist/vue-detour.es.js",
      "require": "./dist/vue-detour.umd.js"
    }
  },

  "scripts": {
    "dev": "vite",
    "build": "vue-tsc --noEmit && vite build",
    "publish": "npm run build && npm publish",
    "publish:alpha": "npm run build && npm publish --tag alpha",
    "publish:beta": "npm run build && npm publish --tag beta",
    "preview": "vite preview"
  },
  "dependencies": {
    "@popperjs/core": "^2.11.5",
    "vue": "^3.2.25"
  },
  "devDependencies": {
    "@types/node": "^17.0.25",
    "@vitejs/plugin-vue": "^2.3.1",
    "autoprefixer": "^10.4.2",
    "postcss": "^8.4.5",
    "tailwindcss": "^3.0.24",
    "typescript": "^4.5.4",
    "vite": "^2.9.5",
    "vue-tsc": "^0.34.7"
  }
}
